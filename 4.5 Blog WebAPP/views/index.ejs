<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Blog App</title>
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>
    <header class="header">
        <h1>Share Thoughts</h1>
        <p>Share your thoughts and explore others' ideas!</p>
    </header>

    <main>
        <!-- Blog Submission Form -->
        <section class="post-blog">
            <form action="/add-blog" method="POST" class="blog-form">
                <textarea 
                    name="blogContent" 
                    rows="3" 
                    placeholder="Write your blog here..." 
                    required>
                </textarea>
                <button type="submit" class="submit-btn">Post</button>
            </form>
        </section>

        <!-- Blogs Section -->
        <section class="blog-container">
            <ul class="blogs">
                <% blogs.forEach((blog, index) => { %>
                    <li class="blog-card">
                        <div class="blog-content">
                            <p><%= blog %></p>
                        </div>
                        <div class="blog-actions">
                            <form action="/delete-blog" method="POST" class="delete-form">
                                <input type="hidden" name="blogIndex" value="<%= index %>">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>

    <footer class="footer">
        <p>&copy; <%= new Date().getFullYear() %> Oluwaseun Osunsola. All rights reserved.</p>
    </footer>
</body>
</html>
